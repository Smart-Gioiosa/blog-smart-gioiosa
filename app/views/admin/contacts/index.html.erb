<h1>Messaggi Form Contatti</h1>
 <table class="table">
    <thead>
      <tr>
        <th>Date</th>
        <th>Name</th>
        <th>Surname</th>
        <th>Email</th>
        <th>Subject</th>
        <th>Message</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.created_at%></td>
          <td><%= link_to  contact.name, [:admin, contact]%></td>
          <td><%= contact.surname%></td>
          <td><%= contact.email%></td>
          <td><%= contact.subject%></td>
          <td><%= truncate (contact.message)%></td>
          <td><%= link_to 'Delete', admin_contact_path(contact), method: :delete, data: { confirm: 'You sure?' } %></td>
	       </tr>
      <% end %>
    </tbody>
  </table>

<br>
