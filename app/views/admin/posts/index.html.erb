<%if @posts.first.blank?%>
  <br/>
  <p class="lead text-center">Al momomento non ci sono posts inseriti</p>
  <%= link_to "Back", admin_posts_path(), class: "btn btn-primary"%>
<%else%>
<div class="page-header">
  <h1>Posts</h1>
  <ul class="actions">
    <li><%= link_to fa_icon("plus") + " New Post", new_admin_post_path(@post), class: "btn btn-success" %></li>
  </ul>
</div>
<div class="table-responsive">
<table class="table table-striped">
 <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, admin_post_path(post) %></td>
          <td><%= post.body%></td>
          <td class="col-md-1"><%= link_to fa_icon("pencil") +" Edit", edit_admin_post_path(post), class:"btn btn-primary" %> </td>
          <td class="col-md-1"><%= link_to fa_icon("trash") + " Delete", [:admin, post], method: :delete, data: {confirm: 'You Sure'}, class: "btn btn-danger"%>
      <% end %>
    </tbody>
  </table>
</div>
<%end%>
<div class="modal fade" id="modal"></div><!-- Modal window -->
