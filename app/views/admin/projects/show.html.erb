<div class="row">
  <h1><%=@project.title%></h1>
  <p><%= @project.description%></p>
  <div class="col-sx-12 col-sm-4 col-md-4 col-lg-4 thumb">
    <%= link_to image_tag(@project.image_preview.url(:small_thumb), class: "img-responsive"), @project.image_preview.url, class: "thumbnail" %>
  </div>
</div>

<div class ="row">
  <div class="page-header">
    <ul class="actions">
    <li><%= link_to fa_icon("pencil") + " Edit Project", edit_admin_project_path(@project),remote: true, class: "btn btn-primary" %></li>
    </ul>
  </div>
</div>

<%= link_to 'Back', admin_projects_path, class: "btn btn-primary" %>
