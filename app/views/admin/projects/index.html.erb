<%if @projects.first.blank?%>
  <br/>
  <p class="lead text-center">Al momomento non ci sono projects inseriti</p>
  <%= link_to fa_icon("plus") + " New Project", new_admin_project_path(@project), remote: true, class: "btn btn-success" %>
  <%= link_to "Back", admin_projects_path(), class: "btn btn-primary"%>
<%else%>
<div class="page-header">
  <h1>Projects</h1>
  <ul class="actions">
    <li><%= link_to fa_icon("plus") + " New Project", new_admin_project_path(@project), remote: true, class: "btn btn-success" %></li>
  </ul>
</div>
<div class="table-responsive">
<table class="table table-striped">
 <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td><%= link_to project.title, admin_project_path(project) %></td>
          <td><%= project.description%></td>
          <td class="col-md-1"><%= link_to fa_icon("pencil") +" Edit", edit_admin_project_path(project), remote: true, class:"btn btn-primary" %> </td>
          <td class="col-md-1"><%= link_to fa_icon("trash") + " Delete", [:admin, project], method: :delete, data: {confirm: 'You Sure'}, class: "btn btn-danger"%>
      <% end %>
    </tbody>
  </table>
</div>
<%end%>
