<%if @categories.first.blank?%>
  <br/>
  <p class="lead text-center">Al momomento non ci sono categories inseriti</p>
  <%= link_to fa_icon("plus") + " New Category", new_admin_category_path(@category), remote: true, class: "btn btn-success" %>
  <%= link_to "Back", admin_categories_path(), class: "btn btn-primary"%>
<%else%>
<div class="page-header">
  <h1>Categories</h1>
  <ul class="actions">
    <li><%= link_to fa_icon("plus") + " New Category", new_admin_category_path(@category), remote: true, class: "btn btn-success" %></li>
  </ul>
</div>
<div class="table-responsive">
<table class="table table-striped">
 <thead>
    <tr>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%=  category.name %></td>

          <td class="col-md-1"><%= link_to fa_icon("pencil") +" Edit", edit_admin_category_path(category), remote: true, class:"btn btn-primary" %> </td>
          <td class="col-md-1"><%= link_to fa_icon("trash") + " Delete", [:admin, category], method: :delete, data: {confirm: 'You Sure'}, class: "btn btn-danger"%>
      <% end %>
    </tbody>
  </table>
</div>
<%end%>
