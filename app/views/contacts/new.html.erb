<section class="hgroup">
  <div class="container">
    <h1>Contatti</h1>
    <h2>Non esitare a contattarci ...</h2>
      <ul class="breadcrumb pull-right">
        <li><a href="/">Home</a> </li>
        <li class="active">Contatti</li>
      </ul>
  </div>
</section>

<section>
  <div class="container">
    <div class="row">
      <div class="office_address col-sm-4 col-md-4">
        <div class="team_member">
          <img src="/assets/logo-inverno.png" width="90" height="90" alt="logo">
          <h5>Smart Gioiosa</h5>
          <small>Associazione Culturale</small><br><br>
          <div class="team_social"> <a href="https://www.facebook.com/SmartGioiosa/"><i class="fa fa-facebook"></i></a> <a href="https://twitter.com/SmartGioiosa"><i class="fa fa-twitter"></i></a> <a href="https://www.instagram.com/smartgioiosa/"><i class="fa fa-instagram"></i></a> <a href="https://github.com/Smart-Gioiosa"><i class="fa fa-github-alt"></i></a> </div>
          <address>
            <strong></strong><br>
            Zona Industriale<br>
            Gliaca di Piraino, ME 98060<br>
            <abbr title="Phone">P:</abbr> 0941 562712 
            <abbr title="Phone">P:</abbr> 3208898256
          </address>
          <address>
            <abbr title="Phone">E:</abbr> <a href="mailto:#">info@smartgioiosa.it</a>
          </address>
        </div>
      </div>
      <div class="contact_form col-sm-8 col-md-8"> 
        <%= form_for(@contact) do |f| %>
          <div class="row">
            <div class="col-sm-6 col-md-6">
              <%= f.label :name, "Name *" %> 
              <%= f.text_field :name, class:"form-control", placeholder:"Nome" %>
            </div> 
            <div class="col-sm-6 col-md-6">
              <%= f.label :surname, "Cognome *" %>
              <%= f.text_field :surname, class:"form-control", placeholder:"Cognome" %>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-12 col-md-12">
              <%= f.label :email, "Email *" %>
              <%= f.text_field :email, class:"form-control", placeholder:"Email" %>
            </div>
            </div>
            <div class="row">
              <div class="col-sm-12 col-md-12">
                <%= f.label :subject, "Oggetto *" %>
                <%= f.text_field :subject, class:"form-control", placeholder:"Oggetto"%>
              </div>
            </div>
            <div class="row">
              <div class="col-sm-12 col-md-12">
                <%= f.label :message, "Messaggio *" %>
                <%= f.text_area :message, class:"form-control", placeholder:"Messaggio", rows: 4 %>
              </div>
            <div class="col-sm-12 col-md-12"> <br/>
            <%= f.submit "INVIA", class:"btn btn-primary"%>
            </div>
      <%end%>
    </div>

    </div>
  </div>
</section>
