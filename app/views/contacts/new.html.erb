<div id="single">

      <div class="container">

        <div id="map"></div>

        <div class="post">
          <div class="caption">

            <div class="row contact-info">

              <div class="col-md-4 text-center">
                <i class="fa fa-home fa-4x"></i>
                <h4>Indirizzo</h4>
                <p>
                  Gioiosa Marea 98063<br />
                  ME Sicilia Italy
                </p>
              </div>
              <div class="col-md-4 text-center">
                <i class="fa fa-phone fa-4x"></i>
                <h4>Telefono</h4>
                <p>
                  Cell: +39 320 8898256<br />
                </p>
              </div>
              <div class="col-md-4 text-center">
                <i class="fa fa-envelope-o fa-4x"></i>
                <h4>Email</h4>
                <p>
                  <a class="email" href="mailto:info@smartgioiosa.it">info@smartgioiosa.it</a><br />
                </p>
              </div>
            </div>

            <div class="header">
              <h1>Contatti</h1>
            </div>

            <div class="row">
              <div class="col-md-6 col-md-offset-3">
                <%= form_for(@contact) do |f| %>

                  <%= render 'shared/error_messages', object: f.object %>
                  <div class="form-group">
                    <%= f.label :name, "Nome *" %>
                    <%= f.text_field :name, class:"form-control", placeholder:"Nome" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :surname, "Cognome *" %>
                    <%= f.text_field :surname, class:"form-control", placeholder:"Cognome" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :email, "Email *" %>
                    <%= f.text_field :email, class:"form-control", placeholder:"Email" %>
                  </div>
                  <div class="form-group">
                    <%= f.label :subject, "Oggetto *" %>
                    <%= f.text_field :subject, class:"form-control", placeholder:"Oggetto"%>
                  </div>
                  <div class="form-group">
                    <%= f.label :message, "Messaggio *" %>
                    <%= f.text_area :message, class:"form-control", placeholder:"Messaggio"%>
                  </div>
                  <%= f.submit "INVIA", class:"btn btn-ada-dark"%>

                <% end %>

              </div>
            </div>

          </div>
        </div>

      </div>

    </div>
