<section class="hgroup centered">
  <div class="container">
    <h1>Eventi</h1>
      <h2>In questa sezione Ã¨ possibile consultare i prossimi eventi dell'<b> Associazione Smart Gioiosa</b></h2>
        <ul class="breadcrumb pull-right">
          <li><a href="index.html">Home</a> </li>
          <li class="active">Eventi</li>
        </ul>
  </div>     
</section>
<section class="service_teasers">
  <div class="container">
  
<%@events.each_with_index do |event, index|%>
  <%if index.even?%>
  <div class="service_teaser">
      <div class="row">
        <div class="service_photo col-sm-4 col-md-4">
          <figure style="background-image:url(<%= event.event_image%>)"></figure>
        </div>
        <div class="service_details col-sm-8 col-md-8 wow animated slideInRight">
        <h2 class="section_header skincolored"><b><%= event.title%></b><small><%= event.event_time%> | <%= event.location%></small></h2>
        <p><%=  (raw event.body.truncate(250, separator: ' '))%></p>
        
        <a class="btn btn-primary pull-right" href="<%=event_path(event)%>"><i class="fa fa-external-link"></i>&nbsp;Dettagli Evento</a> 
        </div>
        </div>
      </div>
      <%else%>
        <div class="service_teaser right">
            <div class="row">
              <div class="service_details col-sm-8 col-md-8 wow animated slideInLeft">
                <h2 class="section_header skincolored"><b><%= event.title%></b><small><%= event.event_time%> | <%= event.location%></small></h2>             <p><%=  (raw event.body.truncate(250, separator: ' '))%></p>                         
                                                        
                  <a class="btn btn-primary pull-left" href="<%=event_path(event)%>"><i class="fa fa-external-link"></i>&nbsp;Dettagli Evento</a> 


                    </div>
                         <div class="service_photo col-sm-4 col-md-4 wow animated slideInRight">
                              <figure style="background-image:url(<%= event.event_image%>)"></figure>

                         </div>
                    </div>
               </div>
      
  <%end%>
  <%end%>
  
  </div>
</section>






