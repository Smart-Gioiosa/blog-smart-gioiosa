  <section class="bg-upcoming-events">
  		<div class="container">
  			<div class="row">
  				<div class="upcoming-events">
  					<div class="row">
              <%@events.each do |event|%>
  						<div class="col-md-6">
  							<div class="event-items">
  								<div class="event-img">
                    <%= link_to (image_tag event.event_image.url, class:"img-responsive"), event_path(event)%>
  									<div class="date-box">
  										<h3><%= event.start_time.strftime("%d")%></h3>
  										<h5><%= event.start_time.strftime("%B")%></h5>
  									</div><!-- .date-box -->
  								</div><!-- .event-img -->
  								<div class="events-content">
  									<h3><%= link_to event.title, event_path(event)%></h3>
  									<ul class="meta-post">
  										<li><i class="fa fa-clock-o" aria-hidden="true"></i> <%= event.start_time.strftime("%d/%m/%Y alle %H:%M")%></li>
  										<li><i class="flaticon-placeholder"></i> <%= event.location%></li>
  									</ul>
                      <p><%=  (raw event.body.truncate(250, separator: ' '))%></p>
                      <%= link_to 'Join now', event_path(event), class:"btn btn-default"%>
  								</div><!-- .events-content -->
  							</div><!-- .events-items -->
  						</div><!-- .col-md-6 -->

              <%end%>
