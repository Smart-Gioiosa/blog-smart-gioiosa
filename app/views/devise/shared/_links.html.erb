<div class="donate-form">
  <div class="information-form">
    <div class="row">
   
      <%- if controller_name != 'sessions' %>
        <div class="col-md-2">
          <div class="form-group">
            <%= link_to "Log in", new_session_path(resource_name), class:"btn btn-default" %>
          </div>
        </div>
      <% end -%>

      <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
        <div class="col-md-2">
          <div class="form-group"> 
            <%= link_to "Registrati", new_registration_path(resource_name), class: "btn btn-default" %>
          </div>
        </div>
      <% end -%>

      <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <div class="col-md-3">
          <div class="form-group"> 
           <%= link_to "Password dimenticata?", new_password_path(resource_name), class: "btn btn-default"  %>
          </div>
        </div>
      <% end -%>

      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <div class="col-md-3">
          <div class="form-group"> 
            <%= link_to "Non hai ricevuto email di conferma?", new_confirmation_path(resource_name), class: "btn btn-default" %>
          </div>
        </div>
      <% end -%>

      <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
        <div class="col-md-3">
          <div class="form-group">
            <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "btn btn-default" %>
          </div>
        </div>
      <% end -%>

      <%- if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <div class="col-md-2">
            <div class="form-group">
              <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider) %>
            </div>
          </div>
        <% end -%>
      <% end -%>
      
      
  
    </div>
  </div>
</div>
