<section class="bg-page-header">
  <div class="page-header-overlay">
    <div class="container">
      <div class="row">
        <div class="page-header">
          <div class="page-title">
            <h2>Accedi alla tua area privata</h2>
          </div><!-- .page-title -->
          <div class="page-header-content">
            <ol class="breadcrumb">
              <li><a href="/">Home</a></li>
              <li>Password dimenticata?</li>
            </ol>
          </div><!-- .page-header-content -->
        </div><!-- .page-header -->
      </div><!-- .row -->
    </div><!-- .container -->
  </div><!-- .page-header-overlay -->
</section>

<section class="bg-donate-section">
  <div class="container">
    <div class="row">
      <div class="donate-form">

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "contact-form" }) do |f| %>
        <%= devise_error_messages! %>
        <div class="information-form">
          <h3>Recupera la tua password</h3>
          <div class="row"> 
            <div class="col-md-12">
              <div class="form-group">
                <%= f.label :email %>
                <%= f.email_field :email, autofocus: true, class: "form-control" %>
              </div>
            </div>

        
          <!--<#%= f.submit "Send me reset password instructions" %>-->
          <div class="col-md-12">
              <div class="form-group">
                <%= button_tag " Invia le istruzioni", class: "btn btn-default"%>
              </div>
          </div>
      
          <% end %>
        </div>
        </div>
        </div>

        <hr>
 
        <%= render "devise/shared/links" %>
                  

    </div><!-- .row -->  
  </div><!-- .container -->
</section>

