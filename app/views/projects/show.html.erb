<div id="single">

  <div class="container">

    <div class="post">
        <%unless @project.image_preview.blank?%>
          <%= image_tag @project.image_preview, class: "img-responsive"  %>
      <%end%>
      <div class="caption">
        <div class="header">
          <h2><%=@project.title%></h2>
        </div>

        <%=raw @project.description%>
      </div>
    </div>


    <div class="comments">

      <!-- START DISQUS -->
      <div id="disqus_thread"></div>
      <script type="text/javascript">

          var disqus_config = function () {
          this.page.shortname = 'blogsmartgioiosa'
          this.page.identifier = '<%= request.fullpath%>';
          this.page.title = '<%= @project.title%>';
          this.page.url = '<%= request.url%>'
         };


          (function() {
          var d = document, s = d.createElement('script'); s.src = '//blogsmartgioiosa.disqus.com/embed.js';
          s.setAttribute('data-timestamp', +new Date()); (d.head || d.body).appendChild(s); })();
          </script>
          <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
      <!-- END DISQUS -->
    </div>


  </div>

</div>
