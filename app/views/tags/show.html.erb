<div id="posts" class="container">
  <div class="row">
    <div class="col-md-8">
      <%@posts.each_with_index do |post, index|%>
      <%if index.even?%>
      <section class="col-md-12 wow fadeIn">
        <div class="post">
              <div class="row">
                <div class="col-md-6 media">
                  <%unless post.image_preview.blank?%>
                    <%= image_tag post.image_preview, class:"img-responsive"  %>
                  <%end%>
                </div>
                <div class="col-md-6 caption">

                  <span class="post-tag">
                    <%post.tags.each do |tag| %> <%= link_to '<span class="glyphicon glyphicon-tags" aria-hidden="true"></span>'.html_safe + "  " + tag.name, tag_path(tag) %><%end%>
                  </span>

                  <%= link_to post.title, post_path(post), class: "post-title"%>
                  <span class="post-date"><%=post.created_at.strftime("%d %b %Y") %></span>
                  <p class="post-description"><%= (raw post.body.truncate(250, separator: ' '))%> <%= link_to "Continua", post_path(post)%></p>
                </div>
              </div>
            </div>
          </section>
        <%else%>
          <section class="col-md-12 wow fadeIn">
            <div class="post">
              <div class="row">
                <div class="col-md-6 caption">

                  <span class="post-tag">
                    <%post.tags.each do |tag| %> <%= link_to '<span class="glyphicon glyphicon-tags" aria-hidden="true"></span>'.html_safe + "  " + tag.name, tag_path(tag) %><%end%>
                  </span>

                  <%= link_to post.title, post_path(post), class: "post-title"%>
                  <span class="post-date"><%=post.created_at.strftime("%d %b %Y") %></span>
                    <p class="post-description"><%= (raw post.body.truncate(250, separator: ' '))%> <%= link_to "Continua", post_path(post)%></p>
                </div>
                <div class="col-md-6 media">
                  <%unless post.image_preview.blank?%>
                    <%= image_tag post.image_preview, class:"img-responsive"  %>
                  <%end%>
                </div>
              </div>
            </div>
          </section>
        <%end%>
        <%end%>

        </div>

       <%= render "home/sidebar"%>

      </div><!--/row -->
    </div> <!--/container -->
