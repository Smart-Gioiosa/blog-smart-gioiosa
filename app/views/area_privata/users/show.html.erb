<!-- Start Recent Project Section -->


	<section class="bg-single-project">
		<div class="container">
			<div class="row">
				<div class="single-project">
					<div class="row">
						<div class="col-md-12">

              <h2 class="text-center">Benvenuto <%= current_user.email%></h2>
              <br>
              <hr>
              <br>
              <h4 class="text-center"> - AVVISO - </h4><br>
 <p class="text-center">
  Si comunica ai partecipanti al Photo Contest che si sta procedendo ad un controllo relativo alle foto caricate e ai voti assegnati: in particolare, le foto assegnate dagli utenti a categorie non corrette verranno spostate in quella corrispondente al soggetto della foto e i voti non confermati (relativi a mail inesistenti o non confermate) verranno annullati!<p>
<h4 class="text-center"><b>Basta confermare le email per far riapparire il voto </h4>
  <p class="text-center">
 Per qualsiasi chiarimento contattateci all'indirizzo email: <a href="mailto:info@smartgioioda.it">info@smartgioiosa.it</a><br> 
Associazione Smart Gioiosa
       </p> 
        </p>
        <br>
        <hr>
        <br>

							<div class="single-pro-main-content">

                <%if current_user.smartphoto.nil?%>
                <p>Partecipa al Photo Smart Contest</p>
                <%= link_to 'Inserisci la tua foto', new_area_privata_user_smartphoto_path(current_user), class:"btn btn-default"%>
                <%else%>
								<div class="row">


									<div class="col-md-5">
										<ul class="single-left-content">
                      <li><h4>Titolo:</h4><p><%=@smartphoto.title%></p></li>
                    <li><h4>Nome:</h4><p><%=@smartphoto.name%></p></li>
                    <li><h4>Cognome:</h4> <p><%=@smartphoto.surname%></p></li>
                    <li><h4>Data Nascita:</h4> <p><%=@smartphoto.birthday%></p></li>
                    <li><h4>Luogo di nascita:</h4> <p><%=@smartphoto.birthplace%></p></li>
                    <li><h4>Telefono:</h4><p> <%=@smartphoto.telephone%></p></li>
                    <li><h4>Email:</h4> <p><%=@smartphoto.email%></p></li>
                    <li><h4>Residenza:</h4> <p><%=@smartphoto.address%></p></li>
                    <li><h4>Anno Scatto:</h4><p> <%=@smartphoto.year.strftime("%Y")%></p></li>
                    <li><h4>Luogo Scatto:</h4> <p><%=@smartphoto.place%></p></li>
                    <li><h4>Categoria:</h4> <p><%=@smartphoto.category%></p></li>
                    
                    <%counter =  []%>
                    <%@smartphoto.like_photos.each do |photo|%>
                      <%if photo.user.confirmed_at.present? || photo.user.services.first.present?%>
                        <%counter << photo%>
                      <%end%>
                    <%end%> 
                    <li><h4>Voti(dato in aggiornamento):</h4> <p><%= counter.count%></p></li>




										</ul>
									</div><!-- .col-md-4 -->
									<div class="col-md-7">
										<div class="single-project-content">
											<h3>Foto</h3>
                      <%if @smartphoto.image.present?%>
                      <%= link_to image_tag(@smartphoto.image.url, class: "img-responsive"), @smartphoto.image.url, class: "thumbnail" %>
                      <%end%>
											<p></p>
										</div><!-- .single-left-content -->
									</div><!-- .col-md-8 -->
								</div>
                <%end%>

							</div><!-- .single-proj-main-content -->
						</div><!-- .col-md-9 -->

					</div><!-- .row -->
				</div><!-- .single-project -->
			</div><!-- .row -->
		</div><!-- .container -->
	</section>


	<!-- End Recent Project Section -->
